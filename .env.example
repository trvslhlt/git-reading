# Database Configuration
# Set DATABASE_TYPE to 'sqlite' or 'postgresql'
DATABASE_TYPE=sqlite

# SQLite Configuration (used when DATABASE_TYPE=sqlite)
# Path to SQLite database file
DATABASE_PATH=./data/readings.db

# PostgreSQL Configuration (used when DATABASE_TYPE=postgresql)
# Host where PostgreSQL is running (localhost for local, postgres for Docker network)
POSTGRES_HOST=localhost
# Port PostgreSQL is listening on
POSTGRES_PORT=5432
# Database name
POSTGRES_DB=git_reading
# Database user
POSTGRES_USER=git_reading_user
# Database password (CHANGE THIS IN PRODUCTION!)
POSTGRES_PASSWORD=dev_password

# Connection Pool Settings (PostgreSQL only)
POSTGRES_POOL_SIZE=5
POSTGRES_POOL_MAX_OVERFLOW=10
